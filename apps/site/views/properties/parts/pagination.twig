<div id="pagination">
    <ul>
    {% if first_page %}<li class="first"><a href="/page/{{ first_page }}" action="/paginate/{{ first_page }}">First Page</a></li>{% endif %}
    {% if previous_page %}<li class="previous"><a href="/page/{{ previous_page }}" action="/paginate/{{ previous_page }}">Previous Page</a></li>{% endif %}
        <li><span>{{ current_page }}</span></li>
    {% if next_page %}<li class="next"><a href="/page/{{ next_page }}" action="/paginate/{{ next_page }}">Next Page</a></li>{% endif %}
    {% if last_page %}<li class="last"><a href="/page/{{ last_page }}" action="/paginate/{{ last_page }}">Last Page</a></li>{% endif %}
    </ul>
</div>